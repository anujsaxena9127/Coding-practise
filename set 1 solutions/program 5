#include <stdio.h>
int main()
{
int i,n, k,j;
scanf("%d",&n);

for(i = 1; i <=n; i++)
{
    for(j=1;j<i;j++)
    {
        printf(" ");

    }
    for(k=1;k<=(n*2-(2*i-1));k++)
    {
        if(i==1 || k==1 || k==(n*2-(2*i-1)))
        {
            printf("*");
        }
        else
        {
            printf(" ");
        }
    }
    
    printf("\n");
}
return 0;
}
  
output:-

***********
 *       *
  *     *
   *   *
    * *
     *
  

 
    






