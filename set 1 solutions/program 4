#include <stdio.h>
int main()
{
int i,n, k,j;
scanf("%d",&n);

for(i = 1; i <=n; i++)
{
    for(j=i;j<n;j++)
    {
        printf(" ");

    }
    for(k=1;k<=(2*i-1);k++)
    {
        if(i==n || k==1 || k==(2*i-1))     //if any one is true print *
        {
            printf("*");
        }
        else
        {
            printf(" ");
        }
    }
    
    printf("\n");
}
return 0;
}


output:-
     *
    * *
   *   *
  *     *
 *       *
***********
    

 
    






